# –æ–±—Ä–∞–±–æ—Ç–∫–∞ –∫–Ω–æ–ø–∫–∏ "–ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é"
@bot.message_handler(func=lambda message: message.text == "–ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é")
def button_Analitica(message):
    bot.send_message(message.chat.id,'–í—ã –≤–µ—Ä–Ω—É–ª–∏—Å—å –≤ –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é', reply_markup=main_menu())

# –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Ç–µ–∫—Å—Ç–æ–≤—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π –¥–ª—è –≤—ã–±–æ—Ä–∞ –≤–æ–ø—Ä–æ—Å–∞ –∏–∑ —Å–ø–∏—Å–∫–∞
def handle_faq_choice(message):
    markup = ReplyKeyboardRemove()
    if message.text.isdigit():
        question_number = int(message.text)
        if question_number in range(1,11):
            with sqlite3.connect('database.db') as conn:
                cursor = conn.cursor()
                cursor.execute('SELECT answer FROM questions')
                answers_1 = cursor.fetchall()
                bot.send_message(message.chat.id,answers_1[question_number-1],reply_markup=main_menu())
        else:
            bot.send_message(message.chat.id, "–¢–∞–∫–æ–≥–æ –≤–æ–ø—Ä–æ—Å–∞ –Ω–µ—Ç –≤ —Å–ø–∏—Å–∫–µ. –í–≤–µ–¥–∏—Ç–µ –≤–µ—Ä–Ω—ã–π –Ω–æ–º–µ—Ä –≤–æ–ø—Ä–æ—Å–∞ –∑–∞–Ω–æ–≤–æ", reply_markup=main_menu())
            bot.register_next_step_handler(message,handle_faq_choice)
        '''if 1 <= int(question_number) <= len(answers):
            bot.send_message(message.chat.id, answers[int(question_number) - 1], reply_markup=markup)
        else:
            bot.send_message(message.chat.id, "–¢–∞–∫–æ–≥–æ –≤–æ–ø—Ä–æ—Å–∞ –Ω–µ—Ç –≤ —Å–ø–∏—Å–∫–µ", reply_markup=markup)'''
    else:
        bot.send_message(message.chat.id, "–í–≤–µ–¥–∏—Ç–µ –≤–µ—Ä–Ω—ã–π –Ω–æ–º–µ—Ä –≤–æ–ø—Ä–æ—Å–∞", reply_markup=main_menu())
        bot.register_next_step_handler(message,handle_faq_choice)

@bot.message_handler(func = lambda message: message.text == '–ó–∞–¥–∞—Ç—å —Å–≤–æ–π –≤–æ–ø—Ä–æ—Å')
def message_question(message):
    bot.send_message(message.chat.id, '–í–≤–µ–¥–∏—Ç–µ –≤–æ–ø—Ä–æ—Å')
    bot.register_next_step_handler(message, get_question)

def get_question(message):
    quest = set(message.text.lower().replace('?','').split())
    with sqlite3.connect('database.db') as conn:
        cursor = conn.cursor()
        cursor.execute('SELECT trigg FROM questions')
        trigers = cursor.fetchall()
        index = 0
        flag = False
        for elem in trigers:
            index += 1
            elem = set(' '.join(elem).lower().split())
            perech = quest.intersection(elem)
            if len(perech) > 0:
                cursor.execute('SELECT answer FROM questions')
                answers_4 = cursor.fetchall()
                cursor.execute('SELECT question FROM questions')
                question_4 = cursor.fetchall()
                flag = True
                bot.send_message(message.chat.id, f"–ï—Å–ª–∏ –≤—ã –∏–º–µ–ª–∏ –≤ –≤–∏–¥—É —ç—Ç–æ –≤–æ–ø—Ä–æ—Å <b>{''.join(question_4[index-1])}</b>:\n{''.join(answers_4[index-1])}", parse_mode='HTML')
        if flag == False:
            markup = ReplyKeyboardMarkup(resize_keyboard=True)
            b1 = KeyboardButton('–î–∞')
            b2 = KeyboardButton('–ù–µ—Ç')
            markup.row(b1,b2)
            bot.send_message(message.chat.id, '–í–∞—à –∑–∞–ø—Ä–æ—Å –Ω–µ–ø–æ–Ω—è—Ç–µ–Ω –¥–ª—è –º–µ–Ω—è\n–°–≤—è–∑–∞—Ç—å –≤–∞—Å —Å —Ç–µ—Ö–Ω–∏—á–µ—Å–∫–∏–º —Å–ø–µ—Ü–∏–∞–ª–∏—Å—Ç–æ–º?', reply_markup=markup)

@bot.message_handler(func = lambda message: message.text == '–î–∞')
def answer_bot(message):
    bot.send_message(message.chat.id, "–°–≤—è–∂–∏—Ç–µ—Å—å —Å –Ω–∞—à–µ–π —Ç–µ—Ö–Ω–∏—á–µ—Å–∫–æ–π –ø–æ–¥–¥–µ—Ä–∂–∫–æ–π @llinspace", reply_markup=main_menu())

@bot.message_handler(func = lambda message: message.text == '–ù–µ—Ç')
def answer_bot(message):
    bot.send_message(message.chat.id,"–í—ã –≤ –≥–ª–∞–≤–Ω–æ–º –º–µ–Ω—é", reply_markup=main_menu())

@bot.message_handler(content_types=['text','photo','audio','vidio','GIF'])
def except_values(message):
    bot.send_message(message.chat.id, "–í–∞—à –∑–∞–ø—Ä–æ—Å –Ω–µ –∫–æ—Ä—Ä–µ–∫—Ç–µ–Ω",reply_markup=main_menu())
# –ó–∞–ø—É—Å–∫–∞–µ–º –±–æ—Ç–∞
bot.infinity_polling()
