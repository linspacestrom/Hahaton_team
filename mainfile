    "–ú–∏–Ω–∏–º–∞–ª—å–Ω–æ —Å—Ç–∞–∂–∏—Ä–æ–≤–∫–∞ —Ä–∞—Å—Å—á–∏—Ç–∞–Ω–∞ –Ω–∞ 3 –º–µ—Å—è—Ü–∞.\n–ë—ã–≤–∞—é—Ç –ø—Ä–æ–≥—Ä–∞–º–º—ã –∏ –±–æ–ª—å—à–µ–π –ø—Ä–æ–¥–æ–ª–∂–∏—Ç–µ–ª—å–Ω–æ—Å—Ç–∏. –°—Ä–æ–∫ –æ–ø—Ä–µ–¥–µ–ª—è–µ—Ç—Å—è –∏–∑ —Ç–≤–æ–µ–≥–æ –≥—Ä–∞—Ñ–∏–∫–∞ –∏ —Å–ø–µ—Ü–∏—Ñ–∏–∫–∏ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏—è",
    "–î–∞, –º—ã –º–æ–∂–µ–º —Ä–∞—Å—Å–º–æ—Ç—Ä–µ—Ç—å –Ω–µ —Ç–æ–ª—å–∫–æ –ø–æ–ª–Ω—É—é, –Ω–æ –∏ —á–∞—Å—Ç–∏—á–Ω—É—é –∑–∞–Ω—è—Ç–æ—Å—Ç—å. –ì–ª–∞–≤–Ω–æ–µ, —á—Ç–æ–±—ã —Ç–≤–æ—è —Å—Ç–∞–∂–∏—Ä–æ–≤–∫–∞ –ø—Ä–æ—Ö–æ–¥–∏–ª–∞ –≤ –±—É–¥–Ω–∏–µ –¥–Ω–∏ –∏ —Ä–∞–±–æ—á–∏–µ —á–∞—Å—ã",
    "–£ –Ω–∞—Å –µ—Å—Ç—å –≤–∞–∫–∞–Ω—Å–∏–∏ —Å –±–∞–∑–æ–≤—ã–º –±—ç–∫–≥—Ä–∞—É–Ω–¥–æ–º. –ê –¥–ª—è —Ç–µ—Ö, –∫—Ç–æ —Ö–æ—á–µ—Ç –Ω–∞—á–∞—Ç—å —Å –Ω—É–ª—è, —É –Ω–∞—Å –¥–µ–π—Å—Ç–≤—É—é—Ç –ø—Ä–æ–≥—Ä–∞–º–º—ã –ø–æ–¥–≥–æ—Ç–æ–≤–∫–∏.",
    "–õ—É—á—à–∏–º —Å—Ç–∞–∂—ë—Ä–∞–º –º—ã –ø—Ä–µ–¥–ª–∞–≥–∞–µ–º –∑–∞–∫–ª—é—á–∏—Ç—å –±–µ—Å—Å—Ä–æ—á–Ω—ã–π –∫–æ–Ω—Ç—Ä–∞–∫—Ç ‚Äî —É—Å—Ç—Ä–æ–∏—Ç—å—Å—è –Ω–∞ –ø–æ—Å—Ç–æ—è–Ω–Ω—É—é —Ä–∞–±–æ—Ç—É –≤ –Ω–∞—à—É –æ—Ç—Ä–∞—Å–ª—å",
    "–í—Å–µ–º —Å—Ç–∞–∂—ë—Ä–∞–º –Ω—É–∂–Ω—ã –æ—Ç–ª–∏—á–Ω—ã–µ –∑–Ω–∞–Ω–∏—è –±–∞–∑–æ–≤—ã—Ö –∞–ª–≥–æ—Ä–∏—Ç–º–æ–≤ –∏ —Å—Ç—Ä—É–∫—Ç—É—Ä –¥–∞–Ω–Ω—ã—Ö, –∞ —Ç–∞–∫–∂–µ —É–º–µ–Ω–∏–µ –ø–∏—Å–∞—Ç—å –∫–æ–¥ –Ω–∞ –æ–¥–Ω–æ–º –∏–∑ —è–∑—ã–∫–æ–≤ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è. –û—Å—Ç–∞–ª—å–Ω—ã–µ —Ç—Ä–µ–±–æ–≤–∞–Ω–∏—è –∑–∞–≤–∏—Å—è—Ç –æ—Ç –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏—è.\n–ü—Ä–∏ –æ—Ç–±–æ—Ä–µ –∫–∞–Ω–¥–∏–¥–∞—Ç–æ–≤ –º—ã –æ–±—Ä–∞—â–∞–µ–º –≤–Ω–∏–º–∞–Ω–∏–µ –Ω–∞ –∞–Ω–∫–µ—Ç—ã –∏ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏—è. –ù–µ —Å—Ç–µ—Å–Ω—è–π—Ç–µ—Å—å –ø–∏—Å–∞—Ç—å –æ —Å–≤–æ–∏—Ö —É—Å–ø–µ—Ö–∞—Ö: –ø–æ–±–µ–¥–∞—Ö –Ω–∞ –æ–ª–∏–º–ø–∏–∞–¥–∞—Ö, –≤—ã—Å–æ–∫–æ–π —É—Å–ø–µ–≤–∞–µ–º–æ—Å—Ç–∏, –ø—É–±–ª–∏–∫–∞—Ü–∏—è—Ö –Ω–∞ –∫–æ–Ω—Ñ–µ—Ä–µ–Ω—Ü–∏—è—Ö –∏ —Ç–∞–∫ –¥–∞–ª–µ–µ.",
    "–î–∞, –º–æ–≥—É—Ç, —Å—Ç–∞–∂–∏—Ä–æ–≤–∫–∞ ‚Äî —ç—Ç–æ –Ω–∞—Å—Ç–æ—è—â–∞—è —Ä–∞–±–æ—Ç–∞, –∏ –µ—Å–ª–∏ —Å—Ç–∞–∂—ë—Ä —Å –Ω–µ–π –Ω–µ —Å–ø—Ä–∞–≤–ª—è–µ—Ç—Å—è, —Ç–æ –ø–æ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞–º –æ—á–µ—Ä–µ–¥–Ω–æ–π –ø—Ä–æ–º–µ–∂—É—Ç–æ—á–Ω–æ–π –æ—Ü–µ–Ω–∫–∏ –º–æ–∂–µ—Ç –±—ã—Ç—å –Ω–µ —Ä–µ–∫–æ–º–µ–Ω–¥–æ–≤–∞–Ω –∫ –ø—Ä–æ–¥–æ–ª–∂–µ–Ω–∏—é —É—á–∞—Å—Ç–∏—è –≤ –ø—Ä–æ–≥—Ä–∞–º–º–µ.",
    "–ú—ã –Ω–∞–¥–µ–µ–º—Å—è, —á—Ç–æ —Ç—ã —Å—Ç–∞–Ω–µ—à—å —á–∞—Å—Ç—å—é –Ω–∞—à–µ–π  –±–æ–ª—å—à–æ–π –∫–æ–º–∞–Ω–¥—ã, –∏ –≥–æ—Ç–æ–≤—ã –ø–æ–º–æ–≥–∞—Ç—å.\n–ú—ã –≥–∞—Ä–∞–Ω—Ç–∏—Ä—É–µ–º:\n‚Ä¢–ø–æ–º–æ—â—å —Ä—É–∫–æ–≤–æ–¥–∏—Ç–µ–ª—è, –Ω–∞—Å—Ç–∞–≤–Ω–∏–∫–∞,\n‚Ä¢ —Ä–µ–≥—É–ª—è—Ä–Ω—É—é –æ—Ü–µ–Ω–∫—É –∏ –æ–±—Ä–∞—Ç–Ω—É—é —Å–≤—è–∑—å,\n‚Ä¢  —É—á–∞—Å—Ç–∏–µ –≤ –ø—Ä–æ—Ñ–∏–ª—å–Ω—ã—Ö –∫–æ–Ω—Ñ–µ—Ä–µ–Ω—Ü–∏—è—Ö,\n‚Ä¢  —Ç—Ä–µ–Ω–∏–Ω–≥–∏ –¥–ª—è —Ä–∞–∑–≤–∏—Ç–∏—è –ø—Ä–æ—Ñ–µ—Å—Å–∏–æ–Ω–∞–ª—å–Ω—ã—Ö –∏ –ª–∏—á–Ω–æ—Å—Ç–Ω—ã—Ö –∫–∞—á–µ—Å—Ç–≤"
]

def main_menu():
    keyboard = ReplyKeyboardMarkup(resize_keyboard=True)
    # –°–ø–∏—Å–æ–∫ —á–∞—Å—Ç–æ –∑–∞–¥–∞–≤–∞–µ–º—ã—Ö –≤–æ–ø—Ä–æ—Å–æ–≤
    # –î–æ–±–∞–≤–ª—è–µ–º –∫–Ω–æ–ø–∫–∏
    keyboard.row(KeyboardButton("–ß–∞—Å—Ç–æ –∑–∞–¥–∞–≤–∞–µ–º—ã–µ –≤–æ–ø—Ä–æ—Å—ã"),
                 KeyboardButton("–ó–∞–¥–∞—Ç—å —Å–≤–æ–π –≤–æ–ø—Ä–æ—Å"))
    keyboard.row(KeyboardButton("–ö–∞—Ä—å–µ—Ä–Ω—ã–µ —Ç—Ä–∞–µ–∫—Ç–æ—Ä–∏–∏"),
                 KeyboardButton("–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏—Ö"))
    return keyboard
# –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–æ–º–∞–Ω–¥—ã /start
@bot.message_handler(commands=['start'])
def start_command(message):

    bot.send_message(message.chat.id,
                     "–ü—Ä–∏–≤–µ—Ç! –Ø –±–æ—Ç –†–æ—Å–∞—Ç–æ–º –°—Ç–∞–∂–∏—Ä–æ–≤–∫–∞ –∏ —è –∑–¥–µ—Å—å, —á—Ç–æ–±—ã –ø–æ–º–æ—á—å —Ç–µ–±–µ —É–∑–Ω–∞—Ç—å –≤—Å–µ –æ —Å—Ç–∞–∂–∏—Ä–æ–≤–∫–∞—Ö –∏ –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏—è—Ö –≤ –∫–æ–º–ø–∞–Ω–∏–∏ –†–æ—Å–∞—Ç–æ–º.",
                     reply_markup=main_menu())


# –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–Ω–æ–ø–∫–∏ "–ß–∞—Å—Ç–æ –∑–∞–¥–∞–≤–∞–µ–º—ã–µ –≤–æ–ø—Ä–æ—Å—ã."
@bot.message_handler(func=lambda message: message.text == "–ß–∞—Å—Ç–æ –∑–∞–¥–∞–≤–∞–µ–º—ã–µ –≤–æ–ø—Ä–æ—Å—ã")
def faq_command(message):

        faq_text = "–í–æ—Ç —á–∞—Å—Ç–æ –∑–∞–¥–∞–≤–∞–µ–º—ã–µ –≤–æ–ø—Ä–æ—Å—ã:\n"
        for i, question in enumerate(faq_list, 1):
            faq_text += f"{i}. {question}\n"
        faq_text += "–ù–∞–ø–∏—à–∏—Ç–µ –Ω–æ–º–µ—Ä –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–µ–≥–æ –≤–∞—Å –≤–æ–ø—Ä–æ—Å–∞"
        bot.send_message(message.chat.id, faq_text)
        # –£–¥–∞–ª—è–µ–º –∫–ª–∞–≤–∏–∞—Ç—É—Ä—É –ø–æ—Å–ª–µ –æ—Ç–ø—Ä–∞–≤–∫–∏ —Å–ø–∏—Å–∫–∞ –≤–æ–ø—Ä–æ—Å–æ–≤
        bot.send_message(message.chat.id, "–í—ã–±–µ—Ä–∏—Ç–µ –Ω–æ–º–µ—Ä –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–µ–≥–æ –≤–∞—Å –≤–æ–ø—Ä–æ—Å–∞:", reply_markup=None)

        # –ü–æ–º–µ—á–∞–µ–º –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è, —á—Ç–æ –æ–∂–∏–¥–∞–µ—Ç—Å—è –≤—ã–±–æ—Ä –≤–æ–ø—Ä–æ—Å–∞
        bot.register_next_step_handler(message, handle_faq_choice)
        markup = types.ReplyKeyboardMarkup(row_width=2)
        item1 = types.KeyboardButton("–ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é")
        markup.add(item1)






# –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–Ω–æ–ø–∫–∏ "–ö–∞—Ä—å–µ—Ä–Ω—ã–µ —Ç—Ä–∞–µ–∫—Ç–æ—Ä–∏–∏"
@bot.message_handler(func=lambda message: message.text == "–ö–∞—Ä—å–µ—Ä–Ω—ã–µ —Ç—Ä–∞–µ–∫—Ç–æ—Ä–∏–∏")
def hand_Carr_Troekt(message):
    markup = types.ReplyKeyboardMarkup(row_width=2)
    item1 = types.KeyboardButton("–ê–Ω–∞–ª–∏—Ç–∏–∫–∞")
    item2 = types.KeyboardButton("–†–∞–∑—Ä–∞–±–æ—Ç–∫–∞")
    item3 = types.KeyboardButton("–¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ")
    item4 = types.KeyboardButton("–ü–æ–¥–¥–µ—Ä–∂–∫–∞")
    item5 = types.KeyboardButton("–ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é")
    markup.add(item1, item2, item3, item4,item5)
    bot.send_message(message.chat.id, "–í—ã–±–µ—Ä–∏—Ç–µ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ:", reply_markup=markup)

# –æ–±—Ä–∞–±–æ—Ç–∫–∞ –∫–Ω–æ–ø–∫–∏ "–ê–Ω–∞–ª–∏—Ç–∏–∫–∞"
@bot.message_handler(func=lambda message: message.text == "–ê–Ω–∞–ª–∏—Ç–∏–∫–∞")
def button_Analitica(message):
    text_prof_anal = "<b>–ê–Ω–∞–ª–∏—Ç–∏–∫ –≤ –ò–¢-–∫–æ–º–ø–∞–Ω–∏–∏ </b>- —ç—Ç–æ —Å–ø–µ—Ü–∏–∞–ª–∏—Å—Ç, –∫–æ—Ç–æ—Ä—ã–π –∑–∞–Ω–∏–º–∞–µ—Ç—Å—è —Å–±–æ—Ä–æ–º, –∞–Ω–∞–ª–∏–∑–æ–º –∏ –∏–Ω—Ç–µ—Ä–ø—Ä–µ—Ç–∞—Ü–∏–µ–π –¥–∞–Ω–Ω—ã—Ö, —Å–≤—è–∑–∞–Ω–Ω—ã—Ö —Å –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω—ã–º–∏ —Ç–µ—Ö–Ω–æ–ª–æ–≥–∏—è–º–∏. –ï–≥–æ –æ—Å–Ω–æ–≤–Ω–∞—è –∑–∞–¥–∞—á–∞ ‚Äî –∏–∑—É—á–∏—Ç—å –∏ –ø—Ä–æ–∞–Ω–∞–ª–∏–∑–∏—Ä–æ–≤–∞—Ç—å —Ä–∞–∑–ª–∏—á–Ω—ã–µ –∞—Å–ø–µ–∫—Ç—ã —Ä–∞–±–æ—Ç—ã –∫–æ–º–ø–∞–Ω–∏–∏, —á—Ç–æ–±—ã –æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å –ø—Ä–æ–±–ª–µ–º—ã, –ø–æ—Ç–µ–Ω—Ü–∏–∞–ª—å–Ω—ã–µ —É–ª—É—á—à–µ–Ω–∏—è –∏ –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç–∏ –¥–ª—è —Ä–æ—Å—Ç–∞. –†–∞–±–æ—Ç–∞ –∞–Ω–∞–ª–∏—Ç–∏–∫–∞ –≤ —Ç—Ä–µ–±—É–µ—Ç –≥–ª—É–±–æ–∫–æ–≥–æ –ø–æ–Ω–∏–º–∞–Ω–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω—ã—Ö —Ç–µ—Ö–Ω–æ–ª–æ–≥–∏–π, –∞–Ω–∞–ª–∏—Ç–∏—á–µ—Å–∫–∏—Ö –Ω–∞–≤—ã–∫–æ–≤, —É–º–µ–Ω–∏—è —Ä–∞–±–æ—Ç–∞—Ç—å —Å –¥–∞–Ω–Ω—ã–º–∏ –∏ –ø—Ä–∏–Ω–∏–º–∞—Ç—å –æ–±–æ—Å–Ω–æ–≤–∞–Ω–Ω—ã–µ —Ä–µ—à–µ–Ω–∏—è –Ω–∞ –æ—Å–Ω–æ–≤–µ –ø–æ–ª—É—á–µ–Ω–Ω—ã—Ö —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤. –ê–Ω–∞–ª–∏—Ç–∏–∫ –∏–≥—Ä–∞–µ—Ç –≤–∞–∂–Ω—É—é —Ä–æ–ª—å –≤ –æ–ø—Ç–∏–º–∏–∑–∞—Ü–∏–∏ —Ä–∞–±–æ—Ç—ã –∫–æ–º–ø–∞–Ω–∏–∏ –∏ –ø–æ–º–æ–≥–∞–µ—Ç –µ–π –¥–æ—Å—Ç–∏—á—å —Å–≤–æ–∏—Ö –±–∏–∑–Ω–µ—Å-—Ü–µ–ª–µ–π.\n <b>–ë–∏–∑–Ω–µ—Å-–∞–Ω–∞–ª–∏—Ç–∏–∫ </b>- –ò—Å—Å–ª–µ–¥—É–µ—Ç –∏ –∞–Ω–∞–ª–∏–∑–∏—Ä—É–µ—Ç –±–∏–∑–Ω–µ—Å-–ø—Ä–æ—Ü–µ—Å—Å—ã –∫–æ–º–ø–∞–Ω–∏–∏, –≤—ã—è–≤–ª—è–µ—Ç –ø–æ—Ç—Ä–µ–±–Ω–æ—Å—Ç–∏ –∏ —Ç—Ä–µ–±–æ–≤–∞–Ω–∏—è –∫–ª–∏–µ–Ω—Ç–æ–≤, –∞ —Ç–∞–∫–∂–µ –æ–ø—Ä–µ–¥–µ–ª—è—Ç—å –≤–æ–∑–º–æ–∂–Ω—ã–µ —É–ª—É—á—à–µ–Ω–∏—è –∏ –æ–ø—Ç–∏–º–∏–∑–∞—Ü–∏–∏. –ë–∏–∑–Ω–µ—Å-–∞–Ω–∞–ª–∏—Ç–∏–∫ –≤ –ò–¢-–∫–æ–º–ø–∞–Ω–∏–∏ —è–≤–ª—è–µ—Ç—Å—è —Å–≤—è–∑—É—é—â–∏–º –∑–≤–µ–Ω–æ–º –º–µ–∂–¥—É –±–∏–∑–Ω–µ—Å-–ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è–º–∏ –∏ —Ä–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫–∞–º–∏." \
                     "\n<b>–°–∏—Å—Ç–µ–º–Ω—ã–π –∞–Ω–∞–ª–∏—Ç–∏–∫ </b>- –ó–∞–Ω–∏–º–∞–µ—Ç—Å—è –∞–Ω–∞–ª–∏–∑–æ–º –∏ –æ–ø—Ç–∏–º–∏–∑–∞—Ü–∏–µ–π –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω—ã—Ö —Å–∏—Å—Ç–µ–º. –û–Ω —Ä–∞–±–æ—Ç–∞–µ—Ç –≤ —Ç–µ—Å–Ω–æ–º –≤–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏–∏ —Å –∫–æ–º–∞–Ω–¥–æ–π —Ä–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫–æ–≤, –º–µ–Ω–µ–¥–∂–µ—Ä–∞–º–∏ –ø—Ä–æ–µ–∫—Ç–æ–≤ –∏ –∑–∞–∫–∞–∑—á–∏–∫–∞–º–∏, —á—Ç–æ–±—ã –ø–æ–Ω—è—Ç—å –∏—Ö –ø–æ—Ç—Ä–µ–±–Ω–æ—Å—Ç–∏ –∏ —Ç—Ä–µ–±–æ–≤–∞–Ω–∏—è –∫ —Å–∏—Å—Ç–µ–º–µ." \
                     "\n<b>–ê–Ω–∞–ª–∏—Ç–∏–∫-–∫–æ–Ω—Å—É–ª—å—Ç–∞–Ω—Ç 1–° </b>- –ò–∑—É—á–∞–µ—Ç –±–∏–∑–Ω–µ—Å-–ø—Ä–æ—Ü–µ—Å—Å—ã –∫–ª–∏–µ–Ω—Ç–∞ –∏ —Ä–∞–∑—Ä–∞–±–∞—Ç—ã–≤–∞–µ—Ç –æ–ø—Ç–∏–º–∞–ª—å–Ω—ã–µ —Ä–µ—à–µ–Ω–∏—è –Ω–∞ –±–∞–∑–µ –ø—Ä–æ–≥—Ä–∞–º–º–Ω–æ–≥–æ –ø—Ä–æ–¥—É–∫—Ç–∞ 1–°, –∫–æ—Ç–æ—Ä—ã–µ –ø–æ–º–æ–≥—É—Ç —É–ª—É—á—à–∏—Ç—å —ç—Ñ—Ñ–µ–∫—Ç–∏–≤–Ω–æ—Å—Ç—å —Ä–∞–±–æ—Ç—ã –ø—Ä–µ–¥–ø—Ä–∏—è—Ç–∏—è. –û–Ω –ø—Ä–æ–≤–æ–¥–∏—Ç –∞–Ω–∞–ª–∏–∑ —Ç—Ä–µ–±–æ–≤–∞–Ω–∏–π, –æ–ø—Ä–µ–¥–µ–ª—è–µ—Ç —Ñ—É–Ω–∫—Ü–∏–æ–Ω–∞–ª—å–Ω—ã–µ –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç–∏ —Å–∏—Å—Ç–µ–º—ã 1–°, –∞ —Ç–∞–∫–∂–µ —Ä–∞–∑—Ä–∞–±–∞—Ç—ã–≤–∞–µ—Ç –ø–ª–∞–Ω –≤–Ω–µ–¥—Ä–µ–Ω–∏—è –∏ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –ü–û."
    text_analitic = "<b>–ê–Ω–∞–ª–∏—Ç–∏–∫ –≤ –ò–¢-–∫–æ–º–ø–∞–Ω–∏–∏ </b>- —ç—Ç–æ —Å–ø–µ—Ü–∏–∞–ª–∏—Å—Ç, –∫–æ—Ç–æ—Ä—ã–π –∑–∞–Ω–∏–º–∞–µ—Ç—Å—è —Å–±–æ—Ä–æ–º, –∞–Ω–∞–ª–∏–∑–æ–º –∏ –∏–Ω—Ç–µ—Ä–ø—Ä–µ—Ç–∞—Ü–∏–µ–π –¥–∞–Ω–Ω—ã—Ö, —Å–≤—è–∑–∞–Ω–Ω—ã—Ö —Å –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω—ã–º–∏ —Ç–µ—Ö–Ω–æ–ª–æ–≥–∏—è–º–∏. –ï–≥–æ –æ—Å–Ω–æ–≤–Ω–∞—è –∑–∞–¥–∞—á–∞ ‚Äî –∏–∑—É—á–∏—Ç—å –∏ –ø—Ä–æ–∞–Ω–∞–ª–∏–∑–∏—Ä–æ–≤–∞—Ç—å —Ä–∞–∑–ª–∏—á–Ω—ã–µ –∞—Å–ø–µ–∫—Ç—ã —Ä–∞–±–æ—Ç—ã –∫–æ–º–ø–∞–Ω–∏–∏, —á—Ç–æ–±—ã –æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å –ø—Ä–æ–±–ª–µ–º—ã, –ø–æ—Ç–µ–Ω—Ü–∏–∞–ª—å–Ω—ã–µ —É–ª—É—á—à–µ–Ω–∏—è –∏ –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç–∏ –¥–ª—è —Ä–æ—Å—Ç–∞. –†–∞–±–æ—Ç–∞ –∞–Ω–∞–ª–∏—Ç–∏–∫–∞ –≤ —Ç—Ä–µ–±—É–µ—Ç –≥–ª—É–±–æ–∫–æ–≥–æ –ø–æ–Ω–∏–º–∞–Ω–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω—ã—Ö —Ç–µ—Ö–Ω–æ–ª–æ–≥–∏–π, –∞–Ω–∞–ª–∏—Ç–∏—á–µ—Å–∫–∏—Ö –Ω–∞–≤—ã–∫–æ–≤, —É–º–µ–Ω–∏—è —Ä–∞–±–æ—Ç–∞—Ç—å —Å –¥–∞–Ω–Ω—ã–º–∏ –∏ –ø—Ä–∏–Ω–∏–º–∞—Ç—å –æ–±–æ—Å–Ω–æ–≤–∞–Ω–Ω—ã–µ —Ä–µ—à–µ–Ω–∏—è –Ω–∞ –æ—Å–Ω–æ–≤–µ –ø–æ–ª—É—á–µ–Ω–Ω—ã—Ö —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤. –ê–Ω–∞–ª–∏—Ç–∏–∫ –∏–≥—Ä–∞–µ—Ç –≤–∞–∂–Ω—É—é —Ä–æ–ª—å –≤ –æ–ø—Ç–∏–º–∏–∑–∞—Ü–∏–∏ —Ä–∞–±–æ—Ç—ã –∫–æ–º–ø–∞–Ω–∏–∏ –∏ –ø–æ–º–æ–≥–∞–µ—Ç –µ–π –¥–æ—Å—Ç–∏—á—å —Å–≤–æ–∏—Ö –±–∏–∑–Ω–µ—Å-—Ü–µ–ª–µ–π."

    bot.send_message(message.chat.id, text=text_analitic,parse_mode="HTML")
    bot.send_message(message.chat.id, text=text_prof_anal, parse_mode="HTML")

# –æ–±—Ä–∞–±–æ—Ç–∫–∞ –∫–Ω–æ–ø–∫–∏ "–†–∞–∑—Ä–∞–±–æ—Ç–∫–∞"
@bot.message_handler(func=lambda message: message.text == "–†–∞–∑—Ä–∞–±–æ—Ç–∫–∞")
def button_Analitica(message):
    text_prof_anal = "<b>–†–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫ JavaScript (frontend) </b>- –° –ø–æ–º–æ—â—å—é —è–∑—ã–∫–∞ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è JavaScript —Å–æ–∑–¥–∞—ë—Ç —á–∞—Å—Ç—å —Å–∞–π—Ç–æ–≤ –∏ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–π, –∫–æ—Ç–æ—Ä—É—é –≤–∏–¥—è—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–∏ –∏ —Å –∫–æ—Ç–æ—Ä–æ–π –æ–Ω–∏ –≤–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤—É—é—Ç."\
                     "\n<b>–†–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫ JavaScript (backend) </b>- –° –ø–æ–º–æ—â—å—é —è–∑—ã–∫–∞ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è JavaScript —Å–æ–∑–¥–∞—ë—Ç —á–∞—Å—Ç—å —Å–∞–π—Ç–æ–≤ –∏ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–π, –æ—Ç–≤–µ—á–∞—é—â—É—é –∑–∞ –æ–±—â—É—é –≤–Ω—É—Ç—Ä–µ–Ω–Ω—é—é –≤—ã—á–∏—Å–ª–∏—Ç–µ–ª—å–Ω—É—é –ª–æ–≥–∏–∫—É, —Ö—Ä–∞–Ω–µ–Ω–∏–µ, –æ–±—Ä–∞–±–æ—Ç–∫—É –∏ –ø–µ—Ä–µ–¥–∞—á—É –¥–∞–Ω–Ω—ã—Ö, —Å–≤—è–∑—å —Å –¥—Ä—É–≥–∏–º–∏ —Å–∏—Å—Ç–µ–º–∞–º–∏." \
                     "\n<b>–†–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫ Java </b>- –û—Ç–≤–µ—á–∞–µ—Ç –∑–∞ backend —Ä–∞–∑—Ä–∞–±–æ—Ç–∫—É –ø—Ä–æ–≥—Ä–∞–º–º–Ω–æ–≥–æ –æ–±–µ—Å–ø–µ—á–µ–Ω–∏—è, —Å–∞–π—Ç–æ–≤ –∏ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–π –Ω–∞ —è–∑—ã–∫–µ Java. –û—Ç—Å–ª–µ–∂–∏–≤–∞–µ—Ç –ª–æ–≥–∏–∫—É –ø—Ä–æ–¥—É–∫—Ç–∞, —á—Ç–æ–±—ã –≤—Å–µ —Ñ—É–Ω–∫—Ü–∏–∏ —Ä–∞–±–æ—Ç–∞–ª–∏ –ø—Ä–∞–≤–∏–ª—å–Ω–æ. –Ø–∑—ã–∫ Java –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –¥–ª—è –∫—Ä—É–ø–Ω—ã—Ö –∫–æ—Ä–ø–æ—Ä–∞—Ç–∏–≤–Ω—ã—Ö —Å–∏—Å—Ç–µ–º." \
                     "\n<b>–†–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫ iOS</b> - –ü–∏—à–µ—Ç —Å–µ—Ä–≤–∏—Å—ã –∏ –ø—Ä–æ–≥—Ä–∞–º–º—ã –¥–ª—è —É—Å—Ç—Ä–æ–π—Å—Ç–≤ Apple –∏ –∏—Ö –æ–ø–µ—Ä–∞—Ü–∏–æ–Ω–Ω–æ–π —Å–∏—Å—Ç–µ–º—ã —Å –ø–æ–º–æ—â—å—é —Å–ø–µ—Ü–∏–∞–ª—å–Ω–æ–≥–æ —è–∑—ã–∫–∞ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è - Swift."
    text_analitic = "<b>–†–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫–∏ –ø–∏—à—É—Ç –∫–æ–¥. </b>–¢–∞–∫ –∏–ª–∏ –∏–Ω–∞—á–µ –æ–Ω–∏ —Ä–∞–±–æ—Ç–∞—é—Ç —Å —è–∑—ã–∫–∞–º–∏ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è, –∞ –µ—â—ë –º–æ–≥—É—Ç –∑–∞–Ω–∏–º–∞—Ç—å—Å—è –≤—ë—Ä—Å—Ç–∫–æ–π –∏ –ø—Ä–æ–≤–µ—Ä—è—Ç—å –ø—Ä–æ–¥—É–∫—Ç –Ω–∞ –æ—à–∏–±–∫–∏. –†–∞–∑—Ä–∞–±–æ—Ç–∫–∞ ‚Äî —ç—Ç–æ —Å–æ–∑–¥–∞–Ω–∏–µ —Ä–∞–∑–Ω—ã—Ö –ø—Ä–æ–¥—É–∫—Ç–æ–≤, –¥–ª—è –∫–æ—Ç–æ—Ä—ã—Ö –Ω—É–∂–µ–Ω –∫–æ–¥. –ù–∞–ø—Ä–∏–º–µ—Ä, —Å–∞–π—Ç–æ–≤, –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–π –∏ –≤—Å–µ—Ö –∏—Ö —ç–ª–µ–º–µ–Ω—Ç–æ–≤. –†–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–µ–ª–∞—é—Ç —Ç–∞–∫, —á—Ç–æ–±—ã —Å–µ—Ä–≤–∏—Å—ã —Ä–∞–±–æ—Ç–∞–ª–∏ –±—ã—Å—Ç—Ä–æ –∏ –±–µ–∑ –æ—à–∏–±–æ–∫, –±—ã–ª–∏ –ø–æ–Ω—è—Ç–Ω—ã–º–∏ –∏ —É–¥–æ–±–Ω—ã–º–∏. –ï—â—ë –æ–Ω–∏ –∑–∞–±–æ—Ç—è—Ç—Å—è –æ –±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç–∏ –¥–∞–Ω–Ω—ã—Ö, –∏—â—É—Ç —Å–ø–æ—Å–æ–±—ã —É—Å–∫–æ—Ä–∏—Ç—å –∏ —É–ª—É—á—à–∏—Ç—å –ø—Ä–æ–¥—É–∫—Ç, –∞ –Ω–∞ —Å—Ç–∞—Ä—Ç–µ –ø–æ–º–æ–≥–∞—é—Ç —Ä–∞–∑–æ–±—Ä–∞—Ç—å—Å—è, –∫–∞–∫ –æ–Ω –¥–æ–ª–∂–µ–Ω —Ä–∞–±–æ—Ç–∞—Ç—å."
    bot.send_message(message.chat.id, text=text_analitic,parse_mode="HTML")
    bot.send_message(message.chat.id, text=text_prof_anal, parse_mode="HTML")

# –æ–±—Ä–∞–±–æ—Ç–∫–∞ –∫–Ω–æ–ø–∫–∏ "–¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ"
@bot.message_handler(func=lambda message: message.text == "–¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ")
def button_Analitica(message):
    text_prof_anal = "<b>–°–ø–µ—Ü–∏–∞–ª–∏—Å—Ç –ø–æ —Ä—É—á–Ω–æ–º—É (—Ñ—É–Ω–∫—Ü–∏–æ–Ω–∞–ª—å–Ω–æ–º—É) —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—é </b>- –¢–µ—Å—Ç–∏—Ä—É–µ—Ç –ø—Ä–æ–≥—Ä–∞–º–º–Ω–æ–µ –æ–±–µ—Å–ø–µ—á–µ–Ω–∏–µ –≤—Ä—É—á–Ω—É—é, –ø—Ä–æ–≤–µ—Ä—è–µ—Ç –µ–≥–æ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤–∏–µ —Ç—Ä–µ–±–æ–≤–∞–Ω–∏—è–º –∑–∞–∫–∞–∑—á–∏–∫–∞. –û–Ω –∏–º–∏—Ç–∏—Ä—É–µ—Ç –ø–æ–≤–µ–¥–µ–Ω–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è, —Å—Ç–∞—Ä–∞–µ—Ç—Å—è –æ–±–Ω–∞—Ä—É–∂–∏—Ç—å –∫–∞–∫ –º–æ–∂–Ω–æ –±–æ–ª—å—à–µ –æ—à–∏–±–æ–∫, –∫–æ—Ç–æ—Ä—ã–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –º–æ–≥ –±—ã —Å–æ–≤–µ—Ä—à–∏—Ç—å, –ø—Ä–æ–±—É–µ—Ç —Ä–∞–∑–Ω—ã–µ —Å—Ü–µ–Ω–∞—Ä–∏–∏ –≤–∑–∞–∏–º–æ–¥–µ–π—Å—Ç–≤–∏—è." \
                     "\n<b>–°–ø–µ—Ü–∏–∞–ª–∏—Å—Ç –ø–æ –Ω–∞–≥—Ä—É–∑–æ—á–Ω–æ–º—É —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—é </b>- –¢–µ—Å—Ç–∏—Ä—É–µ—Ç –ø—Ä–æ–≥—Ä–∞–º–º–Ω–æ–µ –æ–±–µ—Å–ø–µ—á–µ–Ω–∏–µ –ø—Ä–∏ –ø–æ–º–æ—â–∏ —Å–ø–µ—Ü–∏–∞–ª—å–Ω—ã—Ö –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–æ–≤ ‚Äî –ø—Ä–æ–≥—Ä–∞–º–º, —ç–º—É–ª–∏—Ä—É—é—â–∏—Ö –¥–µ–π—Å—Ç–≤–∏—è –±–æ–ª—å—à–æ–≥–æ –∫–æ–ª–∏—á–µ—Å—Ç–≤–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π —Å–∏—Å—Ç–µ–º—ã. –ù–¢ –ø—Ä–æ–≤–æ–¥–∏—Ç—Å—è –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤–∏—è –ü–û —Ç—Ä–µ–±–æ–≤–∞–Ω–∏—è–º –∫ –ø—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω–æ—Å—Ç–∏, —Ç–∞–∫–∏–º –∫–∞–∫ –±—ã—Å—Ç—Ä–æ–¥–µ–π—Å—Ç–≤–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–∏—Ö –æ–ø–µ—Ä–∞—Ü–∏–π –∏ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –æ–¥–Ω–æ–≤—Ä–µ–º–µ–Ω–Ω–æ —Ä–∞–±–æ—Ç–∞—é—â–∏—Ö –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π." \
                     "\n<b>–°–ø–µ—Ü–∏–∞–ª–∏—Å—Ç –ø–æ –∞–≤—Ç–æ–º–∞—Ç–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω–æ–º—É —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—é </b>- –ê–≤—Ç–æ–º–∞—Ç–∏–∑–∏—Ä—É–µ—Ç –Ω–∞–∏–±–æ–ª–µ–µ –∫—Ä–∏—Ç–∏—á–Ω—ã–µ –¥–ª—è –±–∏–∑–Ω–µ—Å–∞ —Å—Ü–µ–Ω–∞—Ä–∏–∏, —á—Ç–æ–±—ã –∏—Ö –ø—Ä–æ–≤–µ—Ä–∫–∞ –≤—ã–ø–æ–ª–Ω—è–ª–∞—Å—å –±—ã—Å—Ç—Ä–µ–µ –∏ —Å –º–µ–Ω—å—à–∏–º–∏ —Ç—Ä—É–¥–æ–∑–∞—Ç—Ä–∞—Ç–∞–º–∏. –î–æ–ª–∂–µ–Ω –∏–º–µ—Ç—å —Å–ø–æ—Å–æ–±–Ω–æ—Å—Ç—å –±—ã—Å—Ç—Ä–æ —Ä–∞–∑–±–∏—Ä–∞—Ç—å—Å—è –≤ –Ω–æ–≤—ã—Ö –ø—Ä–µ–¥–º–µ—Ç–Ω—ã—Ö –æ–±–ª–∞—Å—Ç—è—Ö –∏ —Ö–æ—Ä–æ—à–∏–µ —Ç–µ—Ö–Ω–∏—á–µ—Å–∫–∏–µ –∑–Ω–∞–Ω–∏—è –≤ –æ–±–ª–∞—Å—Ç–∏ –∞–≤—Ç–æ–º–∞—Ç–∏–∑–∞—Ü–∏–∏ —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –≤–µ–±-–ø—Ä–∏–ª–æ–∂–µ–Ω–∏–π."
    text_analitic = "<b>–¢–µ—Å—Ç–∏—Ä–æ–≤—â–∏–∫–∏, –∏–ª–∏ QA-–∏–Ω–∂–µ–Ω–µ—Ä—ã </b>- —ç—Ç–æ —Å–ø–µ—Ü–∏–∞–ª–∏—Å—Ç—ã, –∫–æ—Ç–æ—Ä—ã–µ –ø—Ä–æ–≤–µ—Ä—è—é—Ç, –∫–∞–∫ —Ä–∞–±–æ—Ç–∞–µ—Ç –ø—Ä–æ–≥—Ä–∞–º–º–∞, –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ –∏–ª–∏ —Å–∞–π—Ç. –û–Ω–∏ –∏—â—É—Ç –æ—à–∏–±–∫–∏, —Å–ª–µ–¥—è—Ç, —á—Ç–æ–±—ã –ø—Ä–æ–≥—Ä–∞–º–º–∞ –¥–µ–ª–∞–ª–∞ –∏–º–µ–Ω–Ω–æ —Ç–æ, —á—Ç–æ –∑–∞–¥—É–º–∞–Ω–æ, –∑–∞—â–∏—â–∞—é—Ç –ø—Ä–æ–¥—É–∫—Ç –æ—Ç —Ö–∞–∫–µ—Ä–æ–≤, –ø—Ä–æ–≤–µ—Ä—è—é—Ç, –∫–∞–∫ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ —Ä–∞–±–æ—Ç–∞–µ—Ç –Ω–∞ —Ä–∞–∑–Ω—ã—Ö —É—Å—Ç—Ä–æ–π—Å—Ç–≤–∞—Ö –∏ –≤ —Ä–∞–∑–Ω—ã—Ö –æ–ø–µ—Ä–∞—Ü–∏–æ–Ω–Ω—ã—Ö —Å–∏—Å—Ç–µ–º–∞—Ö. –¢–µ—Å—Ç–∏—Ä–æ–≤—â–∏–∫ –∏—Å–ø–æ–ª—å–∑—É–µ—Ç —Ä–∞–∑–ª–∏—á–Ω—ã–µ –º–µ—Ç–æ–¥—ã —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è, –∏—Å—Å–ª–µ–¥—É—è –≤–æ–∑–º–æ–∂–Ω—ã–µ –¥–µ–π—Å—Ç–≤–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è. –û–Ω –¥–æ–ª–∂–µ–Ω –ø—Ä–µ–¥—É—Å–º–æ—Ç—Ä–µ—Ç—å –≤—Å–µ —Å—Ü–µ–Ω–∞—Ä–∏–∏ –ø–æ–≤–µ–¥–µ–Ω–∏—è –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–µ –∏ —Å–æ—Å—Ç–∞–≤–∏—Ç—å –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏ –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏."
    bot.send_message(message.chat.id, text=text_analitic,parse_mode="HTML")
    bot.send_message(message.chat.id, text=text_prof_anal, parse_mode="HTML")

# –æ–±—Ä–∞–±–æ—Ç–∫–∞ –∫–Ω–æ–ø–∫–∏ "–ü–æ–¥–¥–µ—Ä–∂–∫–∞"
@bot.message_handler(func=lambda message: message.text == "–ü–æ–¥–¥–µ—Ä–∂–∫–∞")
def button_Analitica(message):
    text_prof_anal = "<b>–°–ø–µ—Ü–∏–∞–ª–∏—Å—Ç –ø–µ—Ä–≤–æ–π –ª–∏–Ω–∏–∏ –ø–æ–¥–¥–µ—Ä–∂–∫–∏ </b>- –û–∫–∞–∑—ã–≤–∞–µ—Ç –ø–æ–º–æ—â—å –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è–º –ø—Ä–∏ —Ä–∞–±–æ—Ç–µ –≤ –∫–æ—Ä–ø–æ—Ä–∞—Ç–∏–≤–Ω—ã—Ö —Å–∏—Å—Ç–µ–º–∞—Ö, –≤—ã–ø–æ–ª–Ω—è–µ—Ç —Ç–∏–ø–æ–≤—ã–µ –∑–∞–ø—Ä–æ—Å—ã –∏ –∫–æ–Ω—Å—É–ª—å—Ç–∞—Ü–∏–∏ –ø–æ —Ä–∞–∑–ª–∏—á–Ω—ã–º —É—Å–ª—É–≥–∞–º." \
                     "\n<b>–°–ø–µ—Ü–∏–∞–ª–∏—Å—Ç –≤—Ç–æ—Ä–æ–π –ª–∏–Ω–∏–∏ –ø–æ–¥–¥–µ—Ä–∂–∫–∏ </b>- –ü–æ–º–æ–≥–∞–µ—Ç –±–∏–∑–Ω–µ—Å—É –ø—Ä–∏ —Ä–∞–±–æ—Ç–µ –≤ —Å–∏—Å—Ç–µ–º–∞—Ö –∏ –∫–æ–Ω—Å—É–ª—å—Ç–∏—Ä—É–µ—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π –ø–æ –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç—è–º –∏ —Ñ—É–Ω–∫—Ü–∏–æ–Ω–∞–ª—É –≤ —Ä–∞–º–∫–∞—Ö —Å–≤–æ–µ–≥–æ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏—è." \
                     "\n<b>–°–ø–µ—Ü–∏–∞–ª–∏—Å—Ç –ª–æ–∫–∞–ª—å–Ω–æ–π —Ç–µ—Ö–Ω–∏—á–µ—Å–∫–æ–π –ø–æ–¥–¥–µ—Ä–∂–∫–∏ </b>- –û–±–µ—Å–ø–µ—á–∏–≤–∞–µ—Ç –ò–¢-–ø–æ–¥–¥–µ—Ä–∂–∫—É —Ä–∞–±–æ—á–∏—Ö –º–µ—Å—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π, –∫–æ–º–ø—å—é—Ç–µ—Ä–Ω–æ–≥–æ –æ–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏—è –∏ –ø–µ—Ä–∏—Ñ–µ—Ä–∏–∏, –æ—Ñ–∏—Å–Ω–æ–≥–æ –ò–¢-–æ–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏—è, —Å–∏—Å—Ç–µ–º –í–ö–°, –ª–æ–∫–∞–ª—å–Ω—ã—Ö –ø—Ä–∏–∫–ª–∞–¥–Ω—ã—Ö —Å–∏—Å—Ç–µ–º –∏ –∫–∞–±–µ–ª—å–Ω–æ–π –∏–Ω—Ñ—Ä–∞—Å—Ç—Ä—É–∫—Ç—É—Ä—ã."
    text_analitic = "<b>–°–ø–µ—Ü–∏–∞–ª–∏—Å—Ç —Ç–µ—Ö–Ω–∏—á–µ—Å–∫–æ–π –ø–æ–¥–¥–µ—Ä–∂–∫–∏ </b> –æ–∫–∞–∑—ã–≤–∞–µ—Ç –ø–æ–º–æ—â—å –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è–º –≤ —Ä–µ—à–µ–Ω–∏–∏ –ø—Ä–æ–±–ª–µ–º —Å –ø—Ä–æ–≥—Ä–∞–º–º–Ω—ã–º –∏ –∞–ø–ø–∞—Ä–∞—Ç–Ω—ã–º –æ–±–µ—Å–ø–µ—á–µ–Ω–∏–µ–º –∫–æ–º–ø—å—é—Ç–µ—Ä–∞ –∏–ª–∏ –¥—Ä—É–≥–æ–≥–æ —É—Å—Ç—Ä–æ–π—Å—Ç–≤–∞. –°–ø–µ—Ü–∏–∞–ª–∏—Å—Ç —Ç–µ—Ö–Ω–∏—á–µ—Å–∫–æ–π –ø–æ–¥–¥–µ—Ä–∂–∫–∏ –∏–≥—Ä–∞–µ—Ç –≤–∞–∂–Ω—É—é —Ä–æ–ª—å –≤ –æ–±–µ—Å–ø–µ—á–µ–Ω–∏–∏ –±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç–∏ –∏ —ç—Ñ—Ñ–µ–∫—Ç–∏–≤–Ω–æ—Å—Ç–∏ —Ä–∞–±–æ—Ç—ã –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π —Å –∫–æ–º–ø—å—é—Ç–µ—Ä–æ–º –∏–ª–∏ –¥—Ä—É–≥–∏–º —É—Å—Ç—Ä–æ–π—Å—Ç–≤–æ–º. –û–Ω –ø–æ–º–æ–≥–∞–µ—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è–º —Ä–µ—à–∞—Ç—å –ø—Ä–æ–±–ª–µ–º—ã –∏ —É–ª—É—á—à–∞—Ç—å —Å–≤–æ–π –æ–ø—ã—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è —Ç–µ—Ö–Ω–æ–ª–æ–≥–∏–π."
    bot.send_message(message.chat.id, text=text_analitic,parse_mode="HTML")
    bot.send_message(message.chat.id, text=text_prof_anal, parse_mode="HTML")


# –æ–±—Ä–∞–±–æ—Ç–∫–∞ –∫–Ω–æ–ø–∫–∏ "–ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é"
@bot.message_handler(func=lambda message: message.text == "–ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é")
def button_Analitica(message):
    bot.send_message(message.chat.id,'–í—ã –≤–µ—Ä–Ω—É–ª–∏—Å—å –≤ –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é', reply_markup=main_menu())

# –æ–±—Ä–∞–±–æ—Ç–∫–∞ –∫–Ω–æ–ø–∫–∏ "–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏—Ö"
@bot.message_handler(func=lambda message: message.text == "–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –º–µ—Ä–æ–ø—Ä–∏—è—Ç–∏—Ö")
def button_Analitica(message):
    bot.send_photo(message.chat.id,
    photo="https://sun21-1.userapi.com/impg/HHkcWddSvk7shOcCn5qX0-XdgL6wiRzO_bu3hw/3_Qbh7I4CCM.jpg?size=1080x1080&quality=95&sign=c72e2226565fc817e354c187575a6baf&type=album",
    caption="üåü –ì–ª–∞–≤–Ω–æ–µ —Å–æ–±—ã—Ç–∏–µ —ç—Ç–æ–π –≤–µ—Å–Ω—ã ‚Äì –≤–æ–∑–≤—Ä–∞—â–µ–Ω–∏–µ —Ñ–æ—Ä—É–º–∞ –ù–æ—á—å –ö–∞—Ä—å–µ—Ä—ã "
            "\n üî•–ù–æ–≤–∞—è –∫–æ–º–∞–Ω–¥–∞, –Ω–æ–≤—ã–µ –ø–∞—Ä—Ç–Ω—ë—Ä—ã, –Ω–æ–≤—ã–µ –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç–∏üî•\nüíº –¢—ã —Å–º–æ–∂–µ—à—å –Ω–∞–π—Ç–∏ –µ–¥–∏–Ω–æ–º—ã—à–ª–µ–Ω–Ω–∏–∫–æ–≤, –∫–æ–ª–ª–µ–≥ –∏ –¥—Ä—É–∑–µ–π, –∫–æ—Ç–æ—Ä—ã–µ –ø–æ–¥–¥–µ—Ä–∂–∞—Ç —Ç–µ–±—è –Ω–∞ –ø—É—Ç–∏ –∫ —É—Å–ø–µ—Ö—É –∏ –≤ –Ω–∞—á–∏–Ω–∞–Ω–∏—è—Ö."
            "\n–ö—Ä–æ–º–µ —Ç–æ–≥–æ, —Ç–µ–±—è –∂–¥—É—Ç –ø—Ä–∞–∫—Ç–∏—á–µ—Å–∫–∏–µ –Ω–∞–≤—ã–∫–∏ –∏ –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç—ã, –∫–æ—Ç–æ—Ä—ã–µ –ø–æ–º–æ–≥—É—Ç —É—Å–ø–µ—à–Ω–æ —É—Å—Ç—Ä–æ–∏—Ç—å—Å—è –Ω–∞ —Ä–∞–±–æ—Ç—É –∏ —Ä–µ–∞–ª–∏–∑–æ–≤–∞—Ç—å —Å–≤–æ–π –ø—Ä–æ—Ñ–µ—Å—Å–∏–æ–Ω–∞–ª—å–Ω—ã–π –ø–æ—Ç–µ–Ω—Ü–∏–∞–ª."
            "\n üöÄ–ù–µ —É–ø—É—Å—Ç–∏ —à–∞–Ω—Å —Å—Ç–∞—Ç—å —á–∞—Å—Ç—å—é —ç—Ç–æ–≥–æ –∑–∞—Ö–≤–∞—Ç—ã–≤–∞—é—â–µ–≥–æ —Å–æ–±—ã—Ç–∏—è –∏ —Å–∫–æ—Ä–µ–µ —Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä—É–π—Å—è –ø–æ —Å—Å—ã–ª–∫–µ –Ω–∏–∂–µ!"
            "\nhttps://docs.google.com/forms/d/e/1FAIpQLSc2D3oXlqAKiTtmS5ri0hFsj9mNT8YQSC0bL_3X554kzqWuow/viewform",
                   reply_markup=main_menu())

# –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Ç–µ–∫—Å—Ç–æ–≤—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π –¥–ª—è –≤—ã–±–æ—Ä–∞ –≤–æ–ø—Ä–æ—Å–∞ –∏–∑ —Å–ø–∏—Å–∫–∞
def handle_faq_choice(message):
    markup = ReplyKeyboardRemove()
    if message.text.isdigit():
        question_number = message.text
        if 1 <= int(question_number) <= len(answers):
            bot.send_message(message.chat.id, answers[int(question_number) - 1], reply_markup=markup)
        else:
            bot.send_message(message.chat.id, "–¢–∞–∫–æ–≥–æ –≤–æ–ø—Ä–æ—Å–∞ –Ω–µ—Ç –≤ —Å–ø–∏—Å–∫–µ", reply_markup=markup)
    else:
        bot.send_message(message.chat.id, "–í–≤–µ–¥–∏—Ç–µ –Ω–æ–º–µ—Ä –≤–æ–ø—Ä–æ—Å–∞", reply_markup=markup)
        bot.register_next_step_handler(message,handle_faq_choice)


# –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Ç–µ–∫—Å—Ç–æ–≤—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π
@bot.message_handler(func=lambda message: True)
def handle_text(message):
    # –ó–¥–µ—Å—å –º–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –æ–±—Ä–∞–±–æ—Ç–∫—É –¥—Ä—É–≥–∏—Ö —Å–æ–æ–±—â–µ–Ω–∏–π
    pass


# –ó–∞–ø—É—Å–∫–∞–µ–º –±–æ—Ç–∞
bot.infinity_polling()
